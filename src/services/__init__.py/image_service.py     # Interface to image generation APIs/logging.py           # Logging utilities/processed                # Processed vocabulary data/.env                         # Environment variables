from typing import Any, Dict
import requests

class ImageService:
    def __init__(self, api_key: str, api_url: str):
        self.api_key = api_key
        self.api_url = api_url

    def generate_image(self, word: str) -> Dict[str, Any]:
        payload = {
            "prompt": f"Create an image representing the word '{word}'",
            "api_key": self.api_key
        }
        response = requests.post(self.api_url, json=payload)
        if response.status_code == 200:
            return response.json()
        else:
            raise Exception(f"Image generation failed: {response.text}")

    def log_image_generation(self, word: str, image_url: str) -> None:
        # This function would log the image generation details
        print(f"Generated image for '{word}': {image_url}")