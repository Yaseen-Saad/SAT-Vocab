# SAT Vocabulary AI System Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
HOST=localhost
PORT=8000
CORS_ORIGINS=*

# LLM Service Configuration (Hack Club AI - Free for teens!)
LLM_PROVIDER=hackclub
LLM_API_URL=https://ai.hackclub.com
LLM_MODEL=qwen/qwen3-32b
LLM_API_KEY=not_needed
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3
OPENAI_API_KEY=not_needed

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_store
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_COLLECTION=vocabulary_entries

# Quality Assessment
QUALITY_THRESHOLD=7.0
EXCELLENCE_THRESHOLD=8.5
ACCEPTABLE_THRESHOLD=5.5

# Caching Configuration
CACHE_ENABLED=true
CACHE_SIZE_LIMIT=1000
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Database Configuration
DATABASE_URL=sqlite:///./data/vocabulary.db
DATABASE_ECHO=false

# Feedback Configuration
FEEDBACK_STORAGE_PATH=./data/feedback
POSITIVE_THRESHOLD=7
NEGATIVE_THRESHOLD=5

# Security
SECRET_KEY=your-secret-key-change-in-production
TRUSTED_HOSTS=localhost,127.0.0.1,*.railway.app,*.vercel.app

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Deployment
WORKER_COUNT=1
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50