import os
import json
import csv

def import_vocabulary_data(file_path):
    if not os.path.exists(file_path):
        raise FileNotFoundError(f"The file {file_path} does not exist.")
    
    vocabulary_entries = []
    
    with open(file_path, 'r') as file:
        if file_path.endswith('.json'):
            vocabulary_entries = json.load(file)
        elif file_path.endswith('.csv'):
            reader = csv.DictReader(file)
            for row in reader:
                vocabulary_entries.append(row)
        else:
            raise ValueError("Unsupported file format. Please provide a JSON or CSV file.")
    
    return vocabulary_entries

def main():
    # Example usage
    file_path = 'data/raw/vocabulary_data.json'  # Change this to your actual file path
    try:
        vocabulary_data = import_vocabulary_data(file_path)
        print("Vocabulary data imported successfully.")
        print(vocabulary_data)
    except Exception as e:
        print(f"An error occurred: {e}")

if __name__ == "__main__":
    main()